import pandas as pd
import numpy as np

print("--- Bắt đầu Giai đoạn 1: Chuẩn bị Dữ liệu ---")
try:
    df = pd.read_csv('OnlineRetail.csv', encoding='ISO-8859-1')
except FileNotFoundError:
    print("LỖI: Không tìm thấy file 'OnlineRetail.csv'. Vui lòng kiểm tra lại đường dẫn.")
    exit()

print("\nKích thước Dữ liệu Gốc:", df.shape)
print("\nThông tin Kiểu Dữ liệu (DType) và Giá trị Null:")
df.info()

# --- 2. Tính toán Doanh thu và Làm sạch Dữ liệu ---

# A. Tính toán Cột Doanh thu (TotalRevenue)
df['TotalRevenue'] = df['Quantity'] * df['UnitPrice']

# B. Xử lý Dữ liệu Cơ bản

# 1. Loại bỏ các hàng thiếu Mã Khách hàng (CustomerID)
df.dropna(subset=['CustomerID'], inplace=True)

# 2. Chuyển đổi Mã Khách hàng sang dạng số nguyên (integer) để dễ xử lý
df['CustomerID'] = df['CustomerID'].astype(int)

#B3. Loại bỏ các giao dịch lỗi/Trả hàng (Quantity <= 0 hoặc UnitPrice <= 0)
# Giữ lại chỉ các giao dịch có Quantity > 0 và UnitPrice > 0
df = df[(df['Quantity'] > 0) & (df['UnitPrice'] > 0)]

# --- 3. Chuẩn bị cho Phân tích RFM (Chuyển đổi Kiểu dữ liệu) ---

# Chuyển đổi cột Ngày tháng (InvoiceDate) sang định dạng datetime
df['InvoiceDate'] = pd.to_datetime(df['InvoiceDate'])

# C. Xử lý Giao dịch Trùng lặp
# Loại bỏ các hàng bị trùng lặp hoàn toàn
df.drop_duplicates(inplace=True)

# --- 4. Báo cáo Kết quả Làm sạch ---
print("\n--- Báo cáo Sau khi Làm sạch Dữ liệu ---")
print("Kích thước Dữ liệu Sạch:", df.shape)
print(f"Tổng số giao dịch đã mất: {541909 - df.shape[0]:,} (so với dữ liệu gốc là 541909 hàng)")
print("\n5 Hàng đầu tiên của Dữ liệu Sạch:")
print(df.head())